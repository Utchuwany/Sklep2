@model List<Sklep2.Models.Product>

@{
    ViewData["Title"] = "Home";
}

<h2>Products</h2>

<div class="row">
    @foreach (var product in Model)
    {
        <div class="col-md-4">
            <div class="card h-100">
                <img src="@(!string.IsNullOrEmpty(product.ImageUrl) ? product.ImageUrl : "/images/default-image.jpg")" class="card-img-top" alt="Product Image" />
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">@product.Name</h5>
                    <p class="card-text">Product Description: @product.Description</p>
                    <p class="card-text"><strong>@product.Price.ToString("C")</strong></p>
                    <p class="card-text">Current Stock: @product.StockQuantity</p>
                </div>
            </div>
        </div>
    }
</div>
