@model Sklep2.Models.OrderEditViewModel

<h2>Order Details</h2>

<div class="mb-3">
    <h4>Order ID: @Model.OrderId</h4>
    <p><strong>Status:</strong> @Model.Status</p>
    <p><strong>Delivery Date:</strong> @Model.DeliveryDate.ToString("g")</p>
</div>

<h3>Items</h3>
<table class="table">
    <thead>
        <tr>
            <th>Product</th>
            <th>Quantity</th>
            <th>Price</th>
            <th>Total</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Items)
        {
            <tr>
                <td>@item.ProductName</td>
                <td>@item.Quantity</td>
                <td>@item.Price.ToString("C")</td>
                <td>@(item.Quantity * item.Price) zł</td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Index" class="btn btn-secondary">Back to Orders</a>
